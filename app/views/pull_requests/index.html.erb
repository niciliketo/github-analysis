<p id="notice"><%= notice %></p>

<h1>Pull Requests</h1>

<table>
  <thead>
    <tr>
      <th>Number</th>
      <th>Creator</th>
      <th>Milestone</th>
      <th>Pr created at</th>
      <th>Pr merged at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pull_requests.each do |pull_request| %>
      <tr>
        <td><%= pull_request.number %></td>
        <td><%= pull_request.creator %></td>
        <td><%= pull_request.milestone %></td>
        <td><%= pull_request.pr_created_at %></td>
        <td><%= pull_request.pr_merged_at %></td>
        <td><%= link_to 'Show', pull_request %></td>
        <td><%= link_to 'Edit', edit_pull_request_path(pull_request) %></td>
        <td><%= link_to 'Destroy', pull_request, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Pull Request', new_pull_request_path %>
